<script>

    var pageIndex = 1;
    var pageSize = 3;
    var total = 0;

    $(function () {

        getCoupon(pageIndex);

        $("#selectAll").click(function () {
            $("input[name='smallBox']").attr('checked', true);
        });
        //        反选
        $("#selectAll").click(function () {
            $("input[name='smallBox']").each(function () {
                $(this).attr("checked", !$(this).attr("checked"))
            })
        })
    })

    function getCoupon(index) {
        $.ajax({
            type: "get",
            url: 'http://localhost:50169/api/Collection/GetCollectionlist',
            data: { id: 1, pageIndex: index, pageSize: pageSize },
            success: function (result) {
                
                console.log(result);
                var tmphtml = "";
                $("#await").empty();
               
                for (var i = 0; i < result.collectionList.length; i++) {
                    tmphtml += "<tr>";
                    tmphtml += "<td><input type='checkbox' name='smallBox' value='' /></td>";
                    tmphtml += "<td><img src=" + result.collectionList[i].goodsImg + "  width='50' height='50' ></td>";
                    tmphtml += "<td> " + result.collectionList[i].goodsName + "</td>";
                    tmphtml += "<td>" + result.collectionList[i].priceNow + "</td>";
                    tmphtml += "<td><a href='javascript:void(0); '>加入购物车</a><a href='javascript:void(0);'>取消收藏</a></td>";
                
                    tmphtml += "</tr>";
                }
                $("#await").append(tmphtml);
                total = result.total;
            }
        })
    }
