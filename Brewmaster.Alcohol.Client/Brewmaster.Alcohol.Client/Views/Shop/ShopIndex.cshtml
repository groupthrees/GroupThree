    function totalMoney() {
         total_money = 0;
         total_count = 0;
        var calBtn = $('.calBtn a');
        //$sonCheckBox.each(function () {
        //    if ($(this).is(':checked')) {
        //        var acc  = parseInt($(this).parents('.order_lists').find('.sum_price').html().substring(1));
