@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>lslsls</title>
    <style>
        .d1 {
            width: 80%;
            border: 1px #000 solid;
            height: 2000px;
            margin: 0 auto;
        }

        .d2 {
            width: 100%;
            height: 100px;
            background-color: #ff8c00;
        }

        .d3 {
            width: 100%;
            height: 100px;
            background-color: #000000;
        }

        .d4 {
            width: 100%;
            height: 100px;
            background-color: #008b8b;
        }
        .d4-1
        {
            width: 100%;
            height: 50px;
            background-color: #1e90ff;
        }
        .d4-2 {
            width: 100%;
            height: 50px;
            background-color: #ff69b4;
        }

        .d5 {
            width: 100%;
            height: 1100px;
        }

        .d6 {
            width: 100%;
            height: 400px;
            background-color: #1e90ff;
        }

        .d7 {
            width: 100%;
            height: 200px;
            background-color: #ff8c00;
        }
    </style>
</head>
<body>
    <div class="d1">
        <div class="d2">
            <input id="Search" type="text" />
            <input id="btn1" type="button" value="搜索" />
        </div>
        <div class="d3">
            <a href="#">首页</a>
            <a href="#">领券中心</a>
            <a href="#">酒鬼酒专场</a>
            <a href="#">值得买</a>
            <a href="#">葡萄酒馆</a>
            <a href="#">自营甄选</a>
            <a href="#">洋酒馆</a>
            <a href="#">新品</a>
            <a href="#">CLUB</a>
        </div>
        <div class="d4">
            <div class="d4-1">
                品牌:
                @foreach (var list in ViewBag.list)
                {
                    <a href="#">@list.TypeName</a>
                }
                <br />
                类型:
                @foreach (var list in ViewBag.data)
                {
                    <a href="#">@list.BrandName</a>
                }
            </div>
            <div class="d4-2">
                价格排序:
                <select name="select" id="OrderByPrice">
                    <option value="123">默认排序</option>
                    <option value="456">由高到低</option>
                    <option value="789">由低到高</option>
                </select>
            </div>
        </div>
        <div class="d5">
            @foreach (var list in ViewBag.goodsAll)
            {
                <a href="#">@list.ImgUrl</a>
                <a href="#">@list.GoodsName</a>
                <a href="#">@list.PriceNow</a>
            }
        </div>
        <div class="d6">随机显示6条商品</div>
        <div class="d7"></div>
    </div>
</body>
</html>

